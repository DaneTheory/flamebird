{
	"root": true,
	"env": {
		"es6": true,
		"browser": true,
		"node": true,
		"mocha": true
	},
	"extends": [
		"eslint:recommended",
		"eslint-config-prettier",
		"plugin:import/errors",
		"plugin:import/warnings"
	],
	"plugins": [
		"eslint-plugin-prettier",
		"svelte3"
	],
	"parserOptions": {
		"ecmaVersion": 9,
		"sourceType": "module"
	},
    "overrides": [
        {
            "files": "*.html",
			"processor": "svelte3/svelte3"
        }
    ],
	"settings": {
		"import/core-modules": ["svelte"]
	},
	"globals": {
		"config": true
	},
	"rules": {
		"prettier/prettier": [2, {
			"singleQuote": true,
			"semi": false
		}]
	}
}
